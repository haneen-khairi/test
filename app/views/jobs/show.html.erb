<div class="alert alert-primary   fade show" role="alert">
 <p style="color: green"><%= notice %></p>
 
</div>
<% end %>
<section class="sec-1">
<div class="container">
<div class="row">
<div class="col-md-12 text-center">

<h1> Show Job </h1>
<h6> Job Informaition </h6>
<div class="job">

<%= render @job %>
</div>
