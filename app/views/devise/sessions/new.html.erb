<section class="sec-log">
<div class="container">
<div class="row justify-content-center">
<div class="col-md-6 text-center">
<div class="login-card">
<div class="log-page">
<h2>Log in</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mt-3 mb-3">
    <%= f.label :email, class:"label-log" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input-log" %>
  </div>

  <div class="field  mt-3 mb-3">
    <%= f.label :password , class:"label-log"  %><br />
    <%= f.password_field :password, autocomplete: "current-password" , class:"input-log" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-3 mb-3">
      <%= f.check_box :remember_me ,class:"form-check-input " ,type:"checkbox" ,id:"flexSwitchCheckDefault" %>
      <%= f.label :remember_me , class:"label-check" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class:"btn-log" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</section>