<section class="sec-log">
<div class="container">
<div class="row justify-content-center">
<div class="col-md-6 text-center">
<div class="login-card">
<div class="log-page">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field  mt-3 mb-3">
    <%= f.label :email  , class:"label-log"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"input-log" %>
  </div>

  <div class="field  mt-3 mb-3">
    <%= f.label :password , class:"label-log"  %>
    <% if @minimum_password_length%>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"input-log"  %>
  </div>

  <div class="field  mt-3 mb-3">
    <%= f.label :password_confirmation  , class:"label-log" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-log"  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn-log"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</section>